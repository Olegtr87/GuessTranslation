<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@drawable/bck"
    tools:context="by.oleg.vasilevskiy.guesstranslation.ChangeLangActivity">

    <com.google.android.gms.ads.AdView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/ad_view"
        ads:adUnitId="@string/banner_ad_unit_id"
        ads:adSize="BANNER"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/button3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@layout/selector_lang_esp"
        android:onClick="onClickAboutChangeLang"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="5sp"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/button4"
        android:background="@layout/selector_lang_ch"
        android:onClick="onClickAboutChangeLang"
        android:layout_below="@+id/button6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="5sp"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/button5"
        android:layout_below="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@layout/selector_lang_port"
        android:onClick="onClickAboutChangeLang"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="5sp"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/button6"
        android:background="@layout/selector_lang_de"
        android:onClick="onClickAboutChangeLang"
        android:layout_below="@+id/button7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="5sp"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/button7"
        android:background="@layout/selector_lang_eng"
        android:onClick="onClickAboutChangeLang"
        android:layout_below="@+id/button5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="5sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/cactus"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3"
        android:layout_alignTop="@+id/button3"
        android:layout_above="@+id/ad_view"
        />
</RelativeLayout>
