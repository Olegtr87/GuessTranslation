<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="by.oleg.vasilevskiy.guesstranslation.StatisticActivity"
    android:background="@drawable/bck"
    xmlns:ads="http://schemas.android.com/apk/res-auto" >
    <com.google.android.gms.ads.AdView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/ad_view"
        ads:adUnitId="@string/banner_ad_unit_id"
        ads:adSize="BANNER"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>


    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView6"
                />

            <TextView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView7"
                android:background="@drawable/eng"/>
            <TextView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView8"
                android:background="@drawable/esp"/>
            <TextView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView9"
                android:background="@drawable/ch"/>
            <TextView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView10"
                android:background="@drawable/de"/>
            <TextView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView11"
                android:background="@drawable/port"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView12"
                android:background="@drawable/ok"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView13"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center_vertical|center_horizontal" />
            <TextView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView14"
                android:textSize="20sp"
                android:gravity="center_vertical|center_horizontal" />
            <TextView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView15"
                android:textSize="20sp"
                android:gravity="center_vertical|center_horizontal" />
            <TextView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView16"
                android:textSize="20sp"
                android:gravity="center_vertical|center_horizontal" />
            <TextView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView17"
                android:textSize="20sp"
                android:gravity="center_vertical|center_horizontal" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView19"
                android:background="@drawable/notok"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView20"
                android:textSize="20sp"
                android:gravity="center_vertical|center_horizontal" />
            <TextView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView21"
                android:textSize="20sp"
                android:gravity="center_vertical|center_horizontal" />
            <TextView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView22"
                android:textSize="20sp"
                android:gravity="center_vertical|center_horizontal" />
            <TextView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView23"
                android:textSize="20sp"
                android:gravity="center_vertical|center_horizontal" />
            <TextView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView24"
                android:textSize="20sp"
                android:gravity="center_vertical|center_horizontal" />
        </TableRow>

    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Статистика ответов:"
        android:id="@+id/textView5"
        android:layout_marginTop="20sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="#1e2783" />


</RelativeLayout>
